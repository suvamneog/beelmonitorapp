{
  "expo": {
    "name": "Beel Monitor",
    "slug": "client",
    "version": "1.0.0",
    "orientation": "portrait",
    "icon": "./assets/icon.png",
    "userInterfaceStyle": "light",
    "newArchEnabled": true,
    "splash": {
      "image": "./assets/splash-icon.png",
      "resizeMode": "contain",
      "backgroundColor": "#ffffff"
    },
    "ios": {
      "supportsTablet": true,
      "infoPlist": {
        "NSLocationWhenInUseUsageDescription": "This app needs location access to tag photos with GPS coordinates for beel surveys.",
        "NSLocationAlwaysAndWhenInUseUsageDescription": "This app needs location access to tag photos with GPS coordinates for beel surveys.",
        "NSCameraUsageDescription": "This app needs camera access to take photos for beel surveys."
      },
      "bundleIdentifier": "com.beelmonitorapp.client"
    },
    "android": {
      "package": "com.beelmonitorapp.client",
      "adaptiveIcon": {
        "foregroundImage": "./assets/adaptive-icon.png",
        "backgroundColor": "#ffffff"
      },
      "permissions": [
        "ACCESS_FINE_LOCATION",
        "ACCESS_COARSE_LOCATION",
        "CAMERA",
        "INTERNET"
      ],
      "usesCleartextTraffic": true,
      "edgeToEdgeEnabled": true
    },
    "extra": {
      "eas": {
        "projectId": "f2bd6945-0395-41de-b1ef-efb55a5b68af"
      }
    },
    "owner": "suvamcode"
  },
  "web": {
    "favicon": "./assets/favicon.png"
  }
}
