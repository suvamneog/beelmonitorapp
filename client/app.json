{
  "expo": {
    "name": "Beel Monitor",
    "slug": "client",
    "version": "1.0.0",
    "orientation": "portrait",
    "icon": "./assets/icon.png",
    "userInterfaceStyle": "light",
    "newArchEnabled": true,
    "splash": {
      "image": "./assets/splash-icon.png",
      "resizeMode": "contain",
      "backgroundColor": "#ffffff"
    },
    "ios": {
      "supportsTablet": true,
      "infoPlist": {
        "NSLocationWhenInUseUsageDescription": "This app needs location access to tag photos with GPS coordinates for beel surveys.",
        "NSLocationAlwaysAndWhenInUseUsageDescription": "This app needs location access to tag photos with GPS coordinates for beel surveys.",
        "NSCameraUsageDescription": "This app needs camera access to take photos for beel surveys."
      }
    },
    "android": {
      "package": "com.beelmonitorapp.client",
      "adaptiveIcon": {
        "foregroundImage": "./assets/adaptive-icon.png",
        "backgroundColor": "#ffffff"
      },
      "permissions": [
        "ACCESS_FINE_LOCATION",
        "ACCESS_COARSE_LOCATION",
        "CAMERA"
      ],
      "usesCleartextTraffic": true,
      "edgeToEdgeEnabled": true
    },
    "package": "com.beelmonitorapp.client",
    "extra": {
      "eas": {
        "projectId": "332ba3bd-efde-48ac-9868-7b21f942885b"
      }
    }
  },
  "web": {
    "favicon": "./assets/favicon.png"
  },
  "extra": {
    "eas": {
      "projectId": "332ba3bd-efde-48ac-9868-7b21f942885b"
    }
  }
}
